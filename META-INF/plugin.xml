<idea-plugin version="2">
    <id>com.thoughtworks.pli.intellij.remotepair</id>
    <name>Idea Remote Pair</name>
    <version>1.0</version>
    <vendor email="pli@thoughtworks.com" url="http://www.thoughtworks.com">ThoughtWorks</vendor>

    <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

    <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
    </change-notes>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="131"/>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <application-components>
        <component>
            <implementation-class>com.thoughtworks.pli.intellij.remotepair.RemotePairApplicationComponent
            </implementation-class>
        </component>
        <component>
            <implementation-class>
                com.thoughtworks.pli.intellij.remotepair.settings.SettingsConfigurable
            </implementation-class>
        </component>
    </application-components>

    <project-components>
        <component>
            <implementation-class>com.thoughtworks.pli.intellij.remotepair.RemotePairProjectComponent
            </implementation-class>
        </component>
    </project-components>


    <actions>
        <group id="IdeaRemotePair.Menu" text="Re_mote Pair" description="Remote pair">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="IdeaRemotePair.StartServerAction"
                    class="com.thoughtworks.pli.intellij.remotepair.actions.StartServerAction"
                    text="_Start server ..." description="Start the server"/>
            <action id="IdeaRemotePair.ConnectServerAction"
                    class="com.thoughtworks.pli.intellij.remotepair.actions.ConnectServerAction"
                    text="_Connect to server ..." description="Connect to server"/>
            <action id="IdeaRemotePair.ChooseWorkingModeAction"
                    class="com.thoughtworks.pli.intellij.remotepair.actions.ChooseWorkingModeAction"
                    text="_Choose working mode ..." description="Choose your working mode with pairs"/>
            <action id="IdeaRemotePair.IgnoreFilesAction"
                    class="com.thoughtworks.pli.intellij.remotepair.actions.IgnoreFilesAction"
                    text="_Show ignore files ..." description="Show and edit the ignore files for this project"/>
            <action id="IdeaRemotePair.SyncFilesRequestAction"
                    class="com.thoughtworks.pli.intellij.remotepair.actions.SyncFilesRequestAction"
                    text="_Sync all files ..." description="sync all files from master"/>
            <action id="IdeaRemotePair.TestAction"
                    class="com.thoughtworks.pli.intellij.remotepair.actions.TestAction"
                    text="_My test ..." description="for testing"/>
        </group>
    </actions>

</idea-plugin>
